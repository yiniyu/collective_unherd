<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Responses

    <a data-toggle="collapse" href="#board_member_responses_new_form">
      Add response
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @board_member.responses.each do |response| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/responses/<%= response.id %>">
          <%= response.user_id %>
        </a>

        <a href="/delete_response_from_board_members/<%= response.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="board_member_responses_new_form">
        <%= render partial: "board_member_templates/board_member_responses_new_form" %>
      </div>
    </div>

  </ul>
</div>
