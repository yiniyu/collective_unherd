<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All board members
    </h1>

    <a href="/board_members/new" class="btn btn-block btn-outline-secondary">
      Add a new board member
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "board_member_templates/board_members_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Committee
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @board_members.each do |board_member| %>
      <tr>
        <!-- Display board_member.id start -->
        <td>
          <%= board_member.id %>
        </td>
        <!-- Display board_member.id end -->

        <!-- Display board_member.name start -->
        <td>
          <%= board_member.name %>
        </td>
        <!-- Display board_member.name end -->

        <!-- Display board_member.committee_id start -->
        <td>
          <%= board_member.committee_id %>
        </td>
        <!-- Display board_member.committee_id end -->

        <!-- Display board_member.user_id start -->
        <td>
          <% if board_member.user.present? %>
            <a href="/users/<%= board_member.user.id %>">
              <%= board_member.user.email %>
            </a>
          <% end %>
        </td>
        <!-- Display board_member.user_id end -->

        <!-- Display board_member.created_at start -->
        <td>
          <%= time_ago_in_words(board_member.created_at) %> ago
        </td>
        <!-- Display board_member.created_at end -->

        <!-- Display board_member.updated_at start -->
        <td>
          <%= time_ago_in_words(board_member.updated_at) %> ago
        </td>
        <!-- Display board_member.updated_at end -->

        <td>
          <a href="/board_members/<%= board_member.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @board_members, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
