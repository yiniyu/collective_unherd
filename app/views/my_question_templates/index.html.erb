<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All my questions
    </h1>

    <a href="/my_questions/new" class="btn btn-block btn-outline-secondary">
      Add a new my question
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "my_question_templates/my_questions_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Committee
        </th>

        <th>
          Question details
        </th>

        <th>
          Notes
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @my_questions.each do |my_question| %>
      <tr>
        <td>
          <%= my_question.id %>
        </td>

        <td>
          <%= my_question.committee_id %>
        </td>

        <td>
          <%= my_question.question_details %>
        </td>

        <td>
          <%= my_question.notes %>
        </td>

        <td>
          <% if my_question.user.present? %>
            <a href="/users/<%= my_question.user.id %>">
              <%= my_question.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(my_question.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(my_question.updated_at) %> ago
        </td>

        <td>
          <a href="/my_questions/<%= my_question.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @my_questions, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
