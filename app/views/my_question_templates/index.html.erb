<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All my questions
    </h1>

    <a href="/my_questions/new" class="btn btn-block btn-outline-secondary">
      Add a new my question
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Committee
        </th>

        <th>
          Question details
        </th>

        <th>
          Notes
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @my_questions.each do |my_question| %>
      <tr>
        <!-- Display my_question.id start -->
        <td>
          <%= my_question.id %>
        </td>
        <!-- Display my_question.id end -->

        <!-- Display my_question.committee_id start -->
        <td>
          <%= my_question.committee_id %>
        </td>
        <!-- Display my_question.committee_id end -->

        <!-- Display my_question.question_details start -->
        <td>
          <%= my_question.question_details %>
        </td>
        <!-- Display my_question.question_details end -->

        <!-- Display my_question.notes start -->
        <td>
          <%= my_question.notes %>
        </td>
        <!-- Display my_question.notes end -->

        <!-- Display my_question.user_id start -->
        <td>
          <%= my_question.user.email %>
        </td>
        <!-- Display my_question.user_id end -->

        <!-- Display my_question.created_at start -->
        <td>
          <%= time_ago_in_words(my_question.created_at) %> ago
        </td>
        <!-- Display my_question.created_at end -->

        <!-- Display my_question.updated_at start -->
        <td>
          <%= time_ago_in_words(my_question.updated_at) %> ago
        </td>
        <!-- Display my_question.updated_at end -->

        <td>
          <a href="/my_questions/<%= my_question.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @my_questions, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
