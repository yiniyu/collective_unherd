<form action="/create_response_from_my_question" method="post">

  <input type="hidden" name="user_id" value="<%= @my_question.id %>">

  <div class="form-group">
    <label for="my_questions_id">
      My questions
    </label>

    <input type="text" id="my_questions_id" name="my_questions_id" class="form-control" value="<%= @response.my_questions_id %>">
  </div>

  <div class="form-group">
    <label for="response">
      Response
    </label>

    <textarea id="response" name="response" class="form-control" rows="3"><%= @response.response %></textarea>
  </div>

  <div class="form-group">
    <label for="board_members_id">
      Board members
    </label>

    <%= select_tag(:board_members_id, options_from_collection_for_select(BoardMember.all, :id, :name, @response.board_members_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create response
  </button>
</form>
