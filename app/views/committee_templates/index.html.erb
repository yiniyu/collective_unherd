<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All committees
    </h1>

    <a href="/committees/new" class="btn btn-block btn-outline-secondary">
      Add a new committee
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Board members
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @committees.each do |committee| %>
      <tr>
        <!-- Display committee.id start -->
        <td>
          <%= committee.id %>
        </td>
        <!-- Display committee.id end -->

        <!-- Display committee.name start -->
        <td>
          <%= committee.name %>
        </td>
        <!-- Display committee.name end -->

        <!-- Display committee.board_members_id start -->
        <td>
          <%= committee.board_members_id %>
        </td>
        <!-- Display committee.board_members_id end -->

        <!-- Display committee.user_id start -->
        <td>
          <%= committee.user_id %>
        </td>
        <!-- Display committee.user_id end -->

        <!-- Display committee.created_at start -->
        <td>
          <%= time_ago_in_words(committee.created_at) %> ago
        </td>
        <!-- Display committee.created_at end -->

        <!-- Display committee.updated_at start -->
        <td>
          <%= time_ago_in_words(committee.updated_at) %> ago
        </td>
        <!-- Display committee.updated_at end -->

        <td>
          <a href="/committees/<%= committee.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
