<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All committees
    </h1>

    <a href="/committees/new" class="btn btn-block btn-outline-secondary">
      Add a new committee
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "committee_templates/committees_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Board members
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @committees.each do |committee| %>
      <tr>
        <td>
          <%= committee.id %>
        </td>

        <td>
          <%= committee.name %>
        </td>

        <td>
          <% if committee.board_members.present? %>
            <a href="/board_members/<%= committee.board_members.id %>">
              <%= committee.board_members.name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if committee.user.present? %>
            <a href="/users/<%= committee.user.id %>">
              <%= committee.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(committee.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(committee.updated_at) %> ago
        </td>

        <td>
          <a href="/committees/<%= committee.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @committees, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
