<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Committee #<%= @committee.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/committees" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link committee start -->
      <div class="col">
        <a href="/committees/<%= @committee.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit committee
        </a>
      </div>
      <!-- Edit link committee end -->

      <!-- Delete link committee start -->
      <div class="col">
        <a href="/delete_committee/<%= @committee.id %>" class="btn btn-block btn-outline-secondary">
          Delete committee
        </a>
      </div>
      <!-- Delete link committee end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @committee.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Board members
      </dt>
      <!-- Display board_members_id start -->
      <dd>
        <%= @committee.board_members_id %>
      </dd>
      <!-- Display board_members_id end -->

      <dt>
        User
      </dt>
      <!-- Display user_id start -->
      <dd>
        <%= @committee.user_id %>
      </dd>
      <!-- Display user_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@committee.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@committee.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->

<!-- Show Page Customization end -->
