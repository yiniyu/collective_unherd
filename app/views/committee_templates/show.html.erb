<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Committee #<%= @committee.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/committees" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @committee.user %>
          <a href="/committees/<%= @committee.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit committee
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @committee.user %>
          <a href="/delete_committee/<%= @committee.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete committee
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @committee.name %>
      </dd>

      <dt>
        Board members
      </dt>
      <dd>
        <% if @committee.board_members.present? %>
          <a href="/board_members/<%= @committee.board_members_id %>">
            <%= @committee.board_members.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @committee.user.present? %>
          <a href="/users/<%= @committee.user_id %>">
            <%= @committee.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@committee.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@committee.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

