<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Committee #<%= @committee.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/committees" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link committee start -->
      <div class="col">
        <% if current_user == @committee.user %>
          <a href="/committees/<%= @committee.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit committee
          </a>
        <% end %>
      </div>
      <!-- Edit link committee end -->

      <!-- Delete link committee start -->
      <div class="col">
        <% if current_user == @committee.user %>
          <a href="/delete_committee/<%= @committee.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete committee
          </a>
        <% end %>
      </div>
      <!-- Delete link committee end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @committee.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Board members
      </dt>
      <!-- Display board_members_id start -->
      <dd>
        <% if @committee.board_members.present? %>
          <a href="/board_members/<%= @committee.board_members_id %>">
            <%= @committee.board_members.name %>
          </a>
        <% end %>
      </dd>
      <!-- Display board_members_id end -->

      <dt>
        User
      </dt>
      <!-- Display user_id start -->
      <dd>
        <% if @committee.user.present? %>
          <a href="/users/<%= @committee.user_id %>">
            <%= @committee.user.email %>
          </a>
        <% end %>
      </dd>
      <!-- Display user_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@committee.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@committee.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

