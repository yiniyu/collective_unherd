<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All responses
    </h1>

    <a href="/responses/new" class="btn btn-block btn-outline-secondary">
      Add a new response
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          My questions
        </th>

        <th>
          Response
        </th>

        <th>
          Board members
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @responses.each do |response| %>
      <tr>
        <!-- Display response.id start -->
        <td>
          <%= response.id %>
        </td>
        <!-- Display response.id end -->

        <!-- Display response.user_id start -->
        <td>
          <% if response.question.present? %>
            <a href="/my_questions/<%= response.question.id %>">
              <%= response.question.committee_id %>
            </a>
          <% end %>
        </td>
        <!-- Display response.user_id end -->

        <!-- Display response.my_questions_id start -->
        <td>
          <%= response.my_questions_id %>
        </td>
        <!-- Display response.my_questions_id end -->

        <!-- Display response.response start -->
        <td>
          <%= response.response %>
        </td>
        <!-- Display response.response end -->

        <!-- Display response.board_members_id start -->
        <td>
          <% if response.board_members.present? %>
            <a href="/board_members/<%= response.board_members.id %>">
              <%= response.board_members.name %>
            </a>
          <% end %>
        </td>
        <!-- Display response.board_members_id end -->

        <!-- Display response.created_at start -->
        <td>
          <%= time_ago_in_words(response.created_at) %> ago
        </td>
        <!-- Display response.created_at end -->

        <!-- Display response.updated_at start -->
        <td>
          <%= time_ago_in_words(response.updated_at) %> ago
        </td>
        <!-- Display response.updated_at end -->

        <td>
          <a href="/responses/<%= response.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @responses, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
