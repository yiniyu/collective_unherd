<%= search_form_for @q, :class => collapse_search_form, :id => "responses_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :response_cont, "Response contains" %>
    <%= f.text_field :response_cont, :class => "form-control", :placeholder => "Response contains" %>
  </div>

  <div class="form-group">
    <%= f.label :my_questions_id, "My questions" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :my_questions_id_gteq, :class => "form-control", :placeholder => "My questions greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :my_questions_id_lteq, :class => "form-control", :placeholder => "My questions less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :board_members_name_cont, "BoardMember name contains" %>
    <%= f.text_field :board_members_name_cont, :class => "form-control", :placeholder => "BoardMember name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :committee_id, "MyQuestion Committee" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :question_committee_id_gteq, :class => "form-control", :placeholder => "MyQuestion Committee greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :question_committee_id_lteq, :class => "form-control", :placeholder => "MyQuestion Committee less than or equal to" %>
      </div>
    </div>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/responses" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#responses_filters">
  Show filters
</a>
